[*.{cs,vb}]

# IDE0017: Упростите инициализацию объекта
dotnet_style_object_initializer = true:none

# CS0612: Тип или член устарел
dotnet_diagnostic.CS0612.severity = none

# IDE1006: Стили именования
dotnet_diagnostic.IDE1006.severity = none

# IDE0059: Ненужное присваивание значения
csharp_style_unused_value_assignment_preference = discard_variable:none

# IDE0044: Добавить модификатор только для чтения
dotnet_style_readonly_field = true:none

# IDE0028: Упростите инициализацию коллекции
dotnet_style_collection_initializer = true:none
